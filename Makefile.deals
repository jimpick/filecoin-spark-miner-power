
all: weekly-totals weekly-totals-verified \
	daily-totals daily-totals-verified \
	hourly-totals hourly-totals-verified \
	named-clients-daily-totals \
	named-clients-hourly-totals \
	daily-deals-by-region \
	daily-deals-by-synthetic-region \
	daily-deals-by-country-state-province

clean: clean-weekly-totals clean-weekly-totals-verified \
	clean-daily-totals clean-daily-totals-verified \
	clean-hourly-totals clean-hourly-totals-verified \
	clean-named-clients-daily-totals \
	clean-named-clients-hourly-totals \
	clean-daily-deals-by-region \
	clean-daily-deals-by-synthetic-region \
	clean-daily-deals-by-country-state-province


#
# weekly-totals
#

weekly-totals: dist/deals/weekly-totals.json

dist/deals/weekly-totals.json: $(wildcard ../work/output/deals/aggr_weekly/json/windowStart=*/part-*.json)
	cat ../work/output/deals/aggr_weekly/json/windowStart=*/part-*.json | \
		jq -s 'sort_by(.window.start)' > \
		dist/deals/weekly-totals.json

clean-weekly-totals:
	rm -f dist/deals/weekly-totals.json


#
# weekly-totals-verified
#

weekly-totals-verified: dist/deals/weekly-totals-verified.json

dist/deals/weekly-totals-verified.json: $(wildcard ../work/output/deals/by_verified/aggr_weekly/json/windowStart=*/part-*.json)
	cat ../work/output/deals/by_verified/aggr_weekly/json/windowStart=*/part-*.json | \
		jq -s 'sort_by(.window.start)' > \
		dist/deals/weekly-totals-verified.json

clean-weekly-totals-verified:
	rm -f dist/deals/weekly-totals-verified.json

#
# daily-totals
#

daily-totals: dist/deals/daily-totals.json

dist/deals/daily-totals.json: $(wildcard ../work/output/deals/aggr_daily/json/date=*/part-*.json)
	cat ../work/output/deals/aggr_daily/json/date=*/part-*.json | \
		jq -s 'sort_by(.window.start)' > \
		dist/deals/daily-totals.json

clean-daily-totals:
	rm -f dist/deals/daily-totals.json


#
# daily-totals-verified
#

daily-totals-verified: dist/deals/daily-totals-verified.json

dist/deals/daily-totals-verified.json: $(wildcard ../work/output/deals/by_verified/aggr_daily/json/date=*/part-*.json)
	cat ../work/output/deals/by_verified/aggr_daily/json/date=*/part-*.json | \
		jq -s 'sort_by(.window.start)' > \
		dist/deals/daily-totals-verified.json

clean-daily-totals-verified:
	rm -f dist/deals/daily-totals-verified.json

#
# daily-deals-by-region
#

daily-deals-by-region: dist/deals/daily-deals-by-region.json

dist/deals/daily-deals-by-region.json: $(wildcard ../work/output/deals/by_miner_region/aggr_daily/json/part-*.json) $(wildcard ../work/output/deals/by_miner_region/sum_aggr_daily/json/part-*.json)
	node join-deals-by-region-daily.js by_miner_region > $@

clean-daily-deals-by-region:
	rm -f dist/deals/daily-deals-by-region.json

#
# daily-deals-by-synthetic-region
#

daily-deals-by-synthetic-region: dist/deals/daily-deals-by-synthetic-region.json

dist/deals/daily-deals-by-synthetic-region.json: $(wildcard ../work/output/deals/by_synthetic_region/aggr_daily/json/part-*.json) $(wildcard ../work/output/deals/by_synthetic_region/sum_aggr_daily/json/part-*.json)
	node join-deals-by-region-daily.js by_synthetic_region > $@

clean-daily-deals-by-synthetic-region:
	rm -f dist/deals/daily-deals-by-synthetic-region.json

#
# daily-deals-by-country-state-province
#

daily-deals-by-country-state-province: dist/deals/daily-deals-by-country-state-province.json

dist/deals/daily-deals-by-country-state-province.json: $(wildcard ../work/output/deals/by_provider_country_state_province/aggr_daily/json/part-*.json) $(wildcard ../work/output/deals/by_provider_country_state_province/sum_aggr_daily/json/part-*.json)
	node join-deals-by-region-daily.js by_provider_country_state_province > $@

